{
  "name": "openblock-resource",
  "version": "0.1.0",
  "description": "External resources for OpenBlock projects",
  "main": "start.js",
  "bin": {
    "gen-translations": "./bin/extract-format-message.js",
    "gen-hash": "./bin/gen-hash-file.js",
    "gen-config": "./bin/gen-config.js",
    "opt-size": "./bin/optimization-size.js",
    "translate:extract": "./i18n/extract-format-message.js",
    "translate:push": "./i18n/push-format-message.js",
    "translate:update": "./i18n/update-translations.js"
  },
  "scripts": {
    "fetch": "rimraf external-resources download && node script/download.js --repo=openblockcc/external-resources",
    "fetch:cdn": "node script/download.js --repo=openblockcc/external-resources --cdn=https://cdn.openblock.cc/",
    "start": "rimraf ../.openblockData/external-resources && node ./test/start.js",
    "clean": "rimraf external-resources dist translation downloading-* ../.openblockData/external-resources",
    "build:extension": "node script/generate-extension-page.js --url=https://openblockcc.github.io/external-resources/",
    "build:device": "node script/generate-device-page.js --url=https://openblockcc.github.io/external-resources/",
    "build": "rimraf dist && npm run build:extension && npm run build:device",
    "deploy": "npm run fetch && npm run build",
    "test:opt-size": "node bin/optimization-size.js --dir=external-resources",
    "test:gen-config": "node bin/gen-config.js --dir=external-resources --version=v0.0.1 --repo=openblockcc/external-resources --cdn=https://cdn.openblock.cc/",
    "test:gen-hash": "node bin/gen-hash-file.js --dir=external-resources",
    "test:translate:extract": "node i18n/extract-format-message.js  --dir=external-resources",
    "test:translate:push": "node i18n/push-format-message.js --dir=external-resources",
    "test:translate:update": "node i18n/update-translations.js  --dir=external-resources",
    "lint": "eslint ./",
    "test": "node test/upgrade.js"
  },
  "author": "ArthurZheng",
  "license": "MIT",
  "dependencies": {
    "compare-versions": "^3.6.0",
    "copy-dir": "^1.3.0",
    "express": "^4.17.1",
    "extract-zip": "^2.0.1",
    "folder-hash": "^4.0.1",
    "format-message": "^6.2.3",
    "fs-extra": "^10.0.0",
    "hash-files": "^1.1.1",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "request": "^2.88.2",
    "request-progress": "^3.0.0",
    "require-all": "^3.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@root/walk": "^1.1.0",
    "async": "^3.2.2",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.3.0",
    "eslint-config-scratch": "^5.0.0",
    "format-message-cli": "^6.2.3",
    "format-message-parse": "^6.2.3",
    "json": "^10.0.0",
    "openblock-l10n": "^3.10.20220105060755",
    "progress": "^2.0.3",
    "transifex": "^1.6.6"
  }
}
